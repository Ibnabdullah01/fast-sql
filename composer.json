{
    "name": "progrmanial/fast-sql",
    "type": "library",
    "description": "A secure and flexible PHP class for generating SQL queries.",
    "keywords": ["sql", "database", "query", "security"],
    "license": "MIT",
    "authors": [
        {
            "name": "Imran Saadullah",
            "email": "imransaadullah@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-pdo": "*"
