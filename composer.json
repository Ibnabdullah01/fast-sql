    "autoload": {
        "psr-4": {
            "progrmanial\\FASTSQL\\": "src/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/your/repo.git"
        }
    ],
    "scripts": {
